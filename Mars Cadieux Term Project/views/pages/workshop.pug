doctype html
html(lang="en")
	head
		title #{workshop.title}
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href=`../${theme}`)
		link(rel="icon" type="image/x-icon" href="../favicon.ico")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0")
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

	body
		include ../partials/header
		div#workshopMain 
			div#artistPageLink 
				a#backToProfile(href=`/artists/${artist._id}`) 
					i(class="bi bi-arrow-left")
					| Back to #{artist.name}'s page
			div#workshopContainer 
				img#workshopImage(src="../../workshop.png")
			div#workshopInfo
				h4.wsInfo Title: #{workshop.title}
				h4.wsInfo Host: #{artist.name} 
				h4.wsInfo Day: #{workshop.day}
				h4.wsInfo Time: #{workshop.time}
				h3 Attendees: 
				if(workshop.attendees)
					each attendee in workshop.attendees
						p.attendee @#{attendee.username}
	script(src='../../theme.js')