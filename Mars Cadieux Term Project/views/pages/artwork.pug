doctype html
html(lang="en")
	head
		title #{artwork.title}
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href=`../${theme}`)
		link(rel="icon" type="image/x-icon" href="../favicon.ico")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0")
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

	body
		include ../partials/header
		div#artworkMain 
			div#artistPageLink 
				a#backToProfile(href=`/artists/${artistId._id}`) 
					i(class="bi bi-arrow-left")
					| Back to #{artwork.artist}'s page
			div#photoContainer 
				img#artworkImage(src=artwork.poster)
			div#commentSectionWrapper
				include ../partials/commentsection
		//- needed for client-side js
		span(style="visibility:hidden")
			- let val = isOwnProfile ? "true" : "false"
			input#isOwnProfile(value=val)
	script(src="../../artwork.js")
	script(src='../../theme.js')
